<%= turbo_stream_from "rooms" %>
<div class="flex flex-col w-2/5 border-r-2 overflow-y-auto">
  <% @rooms.each do |room| %>
    <div class="flex flex-row py-4 px-2 justify-center items-center border-b-2 hover:bg-blue-400 active:bg-blue-500 focus:outline-none">
      <div class="w-full">
        <div class="text-lg font-semibold"><%= room.name %></div>
        <span class="text-gray-500">Pick me at 9:00 Am</span>
      </div>
    </div>
  <% end %>
</div>