<div class="flex flex-col h-full">

  <div class="flex flex-col h-full">
    <h1 class="text-3xl font-bold text-center"></h1>
    <p class="text-center">Welcome <%= current_user.username %></p>
  </div>

  <% if current_user %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
  <% end %>

  <div id="chatbox" class="flex flex-col-reverse overflow-y-auto p-3 space-y-reverse">
    <%= render partial: "messages/chatbox", locals: { messages: @messages } %>
  </div>

  <% render partial: "messages/form", locals: { message: @message } %>

</div>