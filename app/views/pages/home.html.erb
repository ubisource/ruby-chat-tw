<div class="container mx-auto shadow-lg rounded-lg">
  <%= render partial: 'pages/header' %>
  <div class="flex flex-row justify-between bg-white h-[calc(100vh-74px)]">
    <%#= render partial: 'rooms/index', locals: { rooms: @rooms } %>
    <%= render template: 'rooms/index' %>

    <div class="w-full px-5 flex flex-col justify-between">
      <%= render partial: 'messages/messages', messages: @messages %>
      <div class="py-3">
        <%= render partial: 'messages/form', room: @current_room, message: @message %>
      </div>
    </div>
  </div>
</div>