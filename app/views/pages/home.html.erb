<%= turbo_stream_from dom_id(current_user) %>
<div class="container mx-auto shadow-lg rounded-lg">
  <%= render partial: 'pages/header' %>
  <div class="flex flex-row justify-between bg-white h-[calc(100vh-74px)]">
    <!-- chat list -->
    <%= render partial: 'pages/rooms', locals: { rooms: @rooms } %>
    <!-- end chat list -->

    <!-- message -->
    <div class="w-full px-5 flex flex-col justify-between">
      <%= render partial: 'pages/message', locals: { messages: @messages } %>
      <div class="py-3">
        <%= render partial: 'messages/form', locals: { message: @message } %>
      </div>
    </div>
    <!-- end message -->
  </div>
</div>