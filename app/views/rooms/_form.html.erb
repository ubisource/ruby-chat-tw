<%= form_with(
      model: @new_room,
      method: :post,
      class: "p-3 flex items-center") do |form| %>
  <%= form.text_field :name, class: "flex-grow p-3 rounded-md border",
                      placeholder: "New Room..." %>
  <%= form.button class: "ml-2 rounded-full bg-themeColorMain text-white w-10 h-10 flex justify-center items-center" do %>
    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 5v14m-7-7h14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  <% end %>
<% end %>